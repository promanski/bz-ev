---
import { getLangFromUrl, useTranslations } from "@/utils/i18n";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const homeHref = lang === "pl" ? "/pl/" : "/";

// Remove current url path and remove trailing slash if exists
const currentUrlPath = Astro.url.pathname.replace(/\/+$/, "");

// Get url array from path
// eg: /tags/tailwindcss => ['tags', 'tailwindcss']
const breadcrumbList = currentUrlPath
  .split("/")
  .slice(1)
  .filter(segment => segment !== "pl" && segment !== "en");

// if breadcrumb is Home > Posts > 1 <etc>
// replace Posts with Posts (page number)
if (breadcrumbList[0] === "posts") {
  breadcrumbList.splice(
    0,
    2,
    `${t("breadcrumb.posts")} (${t("breadcrumb.page")} ${breadcrumbList[1] || 1})`
  );
}

// if breadcrumb is Home > Tags > [tag] > [page] <etc>
// replace [tag] > [page] with [tag] (page number)
if (breadcrumbList[0] === "tags" && !isNaN(Number(breadcrumbList[2]))) {
  breadcrumbList.splice(
    1,
    3,
    `${breadcrumbList[1]} ${Number(breadcrumbList[2]) === 1 ? "" : `(${t("breadcrumb.page")} ${breadcrumbList[2]})`}`
  );
}

// Translate common breadcrumb segments
const translateBreadcrumb = (segment: string) => {
  const translations: Record<string, string> = {
    about: t("breadcrumb.about"),
    search: t("breadcrumb.search"),
    tags: t("breadcrumb.tags"),
    archives: t("breadcrumb.archives"),
  };
  return translations[segment] || segment;
};
---

<nav class="app-layout mt-8 mb-1" aria-label="breadcrumb">
  <ul
    class="font-light [&>li]:inline [&>li:not(:last-child)>a]:hover:opacity-100"
  >
    <li>
      <a href={homeHref} class="opacity-80">{t("nav.home")}</a>
      <span aria-hidden="true" class="opacity-80">&raquo;</span>
    </li>
    {
      breadcrumbList.map((breadcrumb, index) =>
        index + 1 === breadcrumbList.length ? (
          <li>
            <span
              class:list={["capitalize opacity-75", { lowercase: index > 0 }]}
              aria-current="page"
            >
              {/* make the last part lowercase in Home > Tags > some-tag */}
              {translateBreadcrumb(decodeURIComponent(breadcrumb))}
            </span>
          </li>
        ) : (
          <li>
            <a href={`/${breadcrumb}/`} class="capitalize opacity-70">
              {translateBreadcrumb(breadcrumb)}
            </a>
            <span aria-hidden="true">&raquo;</span>
          </li>
        )
      )
    }
  </ul>
</nav>
