---
const { title, url, imageUrl, price, ctaText = "Buy Now" } = Astro.props;
---

<div
  class="border-skin-line bg-skin-card my-6 rounded-lg border p-4 shadow-sm transition-transform hover:scale-[1.01] sm:flex sm:items-center sm:gap-6"
>
  {
    imageUrl && (
      <div class="shrink-0 sm:w-32">
        <img
          src={imageUrl}
          alt={title}
          class="h-32 w-full rounded-md object-cover"
        />
      </div>
    )
  }
  <div class="mt-4 flex-grow text-center sm:mt-0 sm:text-left">
    <h3 class="text-skin-accent text-lg font-bold">{title}</h3>
    {price && <p class="text-skin-base mt-1 font-semibold">{price}</p>}
    <a
      href={url}
      target="_blank"
      rel="noopener noreferrer"
      class="bg-skin-accent text-skin-inverted hover:bg-skin-accent/90 mt-3 inline-block rounded px-4 py-2 text-sm font-bold"
    >
      {ctaText}
    </a>
  </div>
</div>
