---
const { url } = Astro.props;
const currentUrl = url || Astro.url.href;
---

<div id="fb-root"></div>
<script
  async
  defer
  crossorigin="anonymous"
  src="https://connect.facebook.net/pl_PL/sdk.js#xfbml=1&version=v18.0&appId=YOUR_APP_ID"
  nonce="random"></script>

<div
  class="fb-comments"
  data-href={currentUrl}
  data-width="100%"
  data-numposts="5"
>
</div>
